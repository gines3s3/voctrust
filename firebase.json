{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "gradle/**",
      "src/**",
      "**/*.@(kt|kts|properties|bat|scss)",
      "gradlew",
      "characters.txt"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 8081,
      "host": "0.0.0.0"
    }
  }
}
